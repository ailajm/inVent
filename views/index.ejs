<%- include('../views/partials/header') %>

  <h1>Items index page</h1>


  <table id="list">
    <thead>
        <colgroup><col><col><col></colgroup>
        <tr>
            <th>Item Name</th>
            <th>Item Type</th>
            <th>Item Count</th>
            <th>For sale</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach(function(i) { %>
        <tr>
            <td><%= i.name %></td>
            <td><%= i.type %></td>
            <td><%= i.count %></td>
            <td><%= i.forSale %> </td>
            <a href="/items/<%= items.id %>/edit">Edit</a>
            <form action="/items/<%= items.id %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
            </form>
        </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../views/partials/footer') %>