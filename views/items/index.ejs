<%- include('../../views/partials/header') %>

  <h1>Items index page</h1>


  <table id="list">
    <thead>
        <colgroup><col><col><col></colgroup>
        <tr>
            <th>Item Name</th>
            <th>Item Type</th>
            <th>Item Description</th>
            <th>Item Count</th>
            <th>For sale</th>
            <th>Listing</th>
        </tr>
    </thead>
    <tbody>
        <% items.forEach(function(i) { %>
        <tr>
          <td><%= i.name %></td>
          <td><%= i.type %></td>
          <td><%= i.description %></td>
          <td><%= i.count %></td>
          <td><%= i.forSale %> </td>
          <td><%= i.listing %> </td>
          <td>
            <a href="/items/<%= i._id %>/edit">Edit</a>
          </td>
          <td>
            <form action="/items/<%= i._id %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
            </form>
          </td>
        </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../../views/partials/footer') %>